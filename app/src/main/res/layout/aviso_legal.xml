<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!--  Barra superior  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9DAD4"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivLogoAvisoLegal"
                android:layout_width="107dp"
                android:layout_height="104dp"
                android:contentDescription="Logo AutoMarket"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="107dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Aviso Legal"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--  Contenido del Aviso Legal  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AVISO LEGAL Y CONDICIONES GENERALES DE USO"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AutoMarket, accesible desde www.automarket.com, es propiedad de AutoMarket S.L." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="1. DERECHOS DE PROPIEDAD INTELECTUAL E INDUSTRIAL\n\nTodos los derechos de propiedad intelectual del contenido de esta página web son propiedad de AutoMarket S.L." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="2. CONDICIONES DE USO\n\nLa utilización del sitio Web le otorga la condición de Usuario, y supone la aceptación completa de todas las cláusulas y condiciones de uso incluidas en las páginas." />
        <!--  Más contenido del aviso legal...  -->
    </LinearLayout>
</ScrollView>