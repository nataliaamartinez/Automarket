<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvMarcaModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca Modelo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio: 0000 €"
        android:textSize="18sp"
        android:textColor="#009688"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del vehículo"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnContactar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contactar con el vendedor"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnFavorito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir a favoritos"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="#E53935"
        android:textColor="#FFFFFF" />

</LinearLayout>
