<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Publicar Furgoneta"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo Marca -->
        <EditText
            android:id="@+id/et_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Marca"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Modelo -->
        <EditText
            android:id="@+id/et_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Modelo"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Año -->
        <EditText
            android:id="@+id/et_anio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Año"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Precio -->
        <EditText
            android:id="@+id/et_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Kilometraje -->
        <EditText
            android:id="@+id/et_kilometraje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Kilometraje"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Capacidad de Carga -->
        <EditText
            android:id="@+id/et_capacidad_de_carga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:drawable/edit_text"
            android:hint="Capacidad de Carga"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Descripción -->
        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Descripción"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="textMultiLine"
            android:lines="3" />

        <!-- Botón Publicar -->
        <Button
            android:id="@+id/btn_publicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FF0000"
            android:padding="16dp"
            android:text="Publicar"
            android:textColor="#000000" />

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#808080"
            android:padding="16dp"
            android:text="Cancelar"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>