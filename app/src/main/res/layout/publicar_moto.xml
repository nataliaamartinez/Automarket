<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
    <!--  Título  -->
    <TextView android:id="@+id/titulo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Publicar Moto" android:textSize="24sp" android:textColor="#000000" android:layout_marginBottom="16dp" android:gravity="center"/>
    <!--  Campos de entrada  -->
    <EditText android:id="@+id/et_marca" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Marca" android:minHeight="48dp"/>
    <EditText android:id="@+id/et_modelo" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Modelo" android:minHeight="48dp"/>
    <EditText android:id="@+id/et_anio" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Año" android:minHeight="48dp"/>
    <EditText android:id="@+id/et_kilometraje" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Kilometraje" android:minHeight="48dp"/>
    <EditText android:id="@+id/et_cilindrada" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Cilindrada" android:minHeight="48dp"/>
    <EditText android:id="@+id/et_precio" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Precio" android:minHeight="48dp"/>
    <EditText android:id="@+id/et_descripcion" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Descripción" android:minHeight="48dp"/>
    <!--  Botones  -->
    <Button android:id="@+id/btn_publicar" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Publicar"/>
    <Button android:id="@+id/btn_cancelar" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cancelar"/>
</LinearLayout>